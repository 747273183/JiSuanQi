<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="4"
    android:orientation="horizontal"
    android:rowCount="12">

    <EditText
        android:id="@+id/et_num1"
        android:layout_columnSpan="4"
        android:layout_gravity="fill_horizontal"
        android:background="#F1EBC9"
        android:layout_rowWeight="1"
        android:textSize="25sp"
        android:hint="请输入第一个操作数据" />

    <EditText
        android:id="@+id/et_num2"
        android:layout_columnSpan="4"
        android:layout_gravity="fill_horizontal"
        android:background="#F4D0C8"
        android:layout_rowWeight="1"
        android:textSize="25sp"
        android:hint="请输入第二个操作数据" />

    <!--第1行按钮-->
    <Button
        android:background="#B1DBF2"
        android:id="@+id/btn_7"
        android:layout_gravity="fill"
        android:text="7"
        android:layout_columnWeight="1"
        android:layout_rowWeight="2"
        android:textSize="40sp"

        />

    <Button
        android:id="@+id/btn_8"
        android:layout_gravity="fill"
        android:text="8"
        android:layout_columnWeight="1"
        android:layout_rowWeight="2"
        android:background="#ffffff"
        android:textSize="40sp" />

    <Button
        android:id="@+id/btn_9"
        android:layout_gravity="fill"
        android:text="9"
        android:layout_columnWeight="1"
        android:layout_rowWeight="2"
        android:background="#B1DBF2"
        android:textSize="40sp" />

    <Button

        android:id="@+id/btn_chu"
        android:layout_gravity="fill"
        android:text="/"
        android:layout_columnWeight="1"
        android:layout_rowWeight="2"
        android:background="#ffffff"
        android:textSize="40sp" />
    <!--第2行按钮-->
    <Button
        android:id="@+id/btn_4"
        android:layout_gravity="fill"
        android:text="4"
        android:layout_columnWeight="1"
        android:layout_rowWeight="2"
        android:background="#ffffff"
        android:textSize="40sp" />
    <Button
        android:background="#B1DBF2"
        android:id="@+id/btn_5"
        android:layout_gravity="fill"
        android:text="5"
        android:layout_columnWeight="1"
        android:layout_rowWeight="2"
        android:textSize="40sp" />
    <Button
        android:id="@+id/btn_6"
        android:layout_gravity="fill"
        android:text="6"
        android:layout_columnWeight="1"
        android:layout_rowWeight="2"
        android:background="#ffffff"

        android:textSize="40sp" />
    <Button
        android:id="@+id/btn_cheng"
        android:layout_gravity="fill"
        android:text="*"
        android:layout_columnWeight="1"
        android:layout_rowWeight="2"
        android:background="#B1DBF2"
        android:textSize="40sp" />
    <!--第3行按钮-->
    <Button
        android:id="@+id/btn_1"
        android:layout_gravity="fill"
        android:text="1"
        android:layout_columnWeight="1"
        android:layout_rowWeight="2"
        android:background="#B1DBF2"
        android:textSize="40sp" />
    <Button
        android:id="@+id/btn_2"
        android:layout_gravity="fill"
        android:text="2"
        android:layout_columnWeight="1"
        android:layout_rowWeight="2"
        android:background="#ffffff"
        android:textSize="40sp" />
    <Button
        android:background="#B1DBF2"
        android:id="@+id/btn_3"
        android:layout_gravity="fill"
        android:text="3"
        android:layout_columnWeight="1"
        android:layout_rowWeight="2"
        android:textSize="40sp" />
    <Button
        android:id="@+id/btn_jian"
        android:layout_gravity="fill"
        android:text="-"
        android:layout_columnWeight="1"
        android:layout_rowWeight="2"
        android:background="#ffffff"
        android:textSize="40sp" />
    <!--第4行按钮-->
    <Button
        android:id="@+id/btn_0"
        android:layout_gravity="fill"
        android:text="0"
        android:layout_columnWeight="1"
        android:layout_rowWeight="2"
        android:background="#ffffff"
        android:textSize="40sp" />
    <Button
        android:id="@+id/btn_dian"
        android:layout_gravity="fill"
        android:text="."
        android:layout_columnWeight="1"
        android:layout_rowWeight="2"
        android:background="#B1DBF2"
        android:textSize="40sp" />
    <Button
        android:id="@+id/btn_deng"
        android:layout_gravity="fill"
        android:text="="
        android:layout_columnWeight="1"
        android:layout_rowWeight="2"
        android:background="#F6D93B"
        android:textSize="40sp" />
    <Button
        android:background="#B1DBF2"
        android:id="@+id/btn_jia"
        android:layout_gravity="fill"
        android:text="+"
        android:layout_columnWeight="1"
        android:layout_rowWeight="2"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/tv_result"
        android:hint="存放计算结果"
        android:layout_columnSpan="4"
        android:layout_gravity="fill"
        android:layout_rowWeight="2"
        android:textSize="40sp"
        android:gravity="center"
        android:background="#F4D0C8"
        />

</GridLayout>